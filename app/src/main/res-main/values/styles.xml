<resources>

    <style name="DotStepper"/>

    <!--______________________________Gray and white theme__________________________-->
    <style name="AppTheme.GrayWhite" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/gray_6</item>
        <item name="colorPrimaryDark">@color/gray_4</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:colorBackground">@color/gray_6</item>
        <item name="android:textColor">@color/text_color_gray_white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondary">@color/white_c</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:editTextStyle">@style/InputField.GrayWhite</item>
        <item name="ico_color">@color/white</item>
        <item name="ms_stepperStyle">@style/DotStepper.GrayWhite</item>
        <!-- drawables -->
        <item name="themedBackDrawable">@drawable/ic_arrow_back_white</item>
        <item name="themedMyLocationDrawable">@drawable/ic_my_location_black</item>
        <item name="themedFavoriteDrawable">@drawable/ic_favorite_white</item>
        <item name="themedFavoriteBorderDrawable">@drawable/ic_favorite_border_white</item>
        <item name="themedAddDrawable">@drawable/ic_add_black</item>
        <item name="themedSettingsDrawable">@drawable/ic_settings_white</item>
        <item name="themedCheckDrawable">@drawable/ic_check_black</item>
    </style>

    <style name="InputField.GrayWhite" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/gray_5</item>
    </style>

    <style name="DotStepper.GrayWhite">
        <item name="ms_stepperType">dots</item>
        <item name="ms_activeStepColor">@color/white</item>
        <item name="ms_inactiveStepColor">@color/white_c</item>
        <item name="ms_bottomNavigationBackground">@color/gray_6</item>
    </style>

    <!--_________________________________________________________________________________-->


    <!--______________________________White and black theme__________________________-->
    <style name="AppTheme.WhiteBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white_c</item>
        <item name="colorAccent">@color/gray_6</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/text_color_white_black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_4</item>
        <item name="android:textColorSecondaryInverse">@color/white_c</item>
        <item name="android:editTextStyle">@style/InputField.WhiteBlack</item>
        <item name="ico_color">@color/black</item>
        <item name="ms_stepperStyle">@style/DotStepper.WhiteBlack</item>
        <!-- drawables -->
        <item name="themedBackDrawable">@drawable/ic_arrow_back_black</item>
        <item name="themedMyLocationDrawable">@drawable/ic_my_location_white</item>
        <item name="themedFavoriteDrawable">@drawable/ic_favorite_black</item>
        <item name="themedFavoriteBorderDrawable">@drawable/ic_favorite_border_black</item>
        <item name="themedAddDrawable">@drawable/ic_add_white</item>
        <item name="themedSettingsDrawable">@drawable/ic_settings_black</item>
        <item name="themedCheckDrawable">@drawable/ic_check_white</item>
    </style>

    <style name="InputField.WhiteBlack" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/white_c</item>
    </style>

    <style name="DotStepper.WhiteBlack">
        <item name="ms_stepperType">dots</item>
        <item name="ms_activeStepColor">@color/black</item>
        <item name="ms_inactiveStepColor">@color/gray_4</item>
        <item name="ms_bottomNavigationBackground">@color/white</item>
    </style>

    <!--_________________________________________________________________________________-->

</resources>
