<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Gray.White" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_6</item>
        <item name="colorPrimaryDark">@color/gray_4</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:colorBackground">@color/gray_6</item>
        <item name="android:textColor">@color/text_color_gray_white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondary">@color/white_c</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:editTextStyle">@style/InputField.Gray.White</item>
        <item name="ico_color">@color/white</item>
        <item name="ms_stepperStyle">@style/DotStepperStyle</item>
    </style>

    <style name="InputField.Gray.White" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/gray_5</item>
    </style>

    <style name="DotStepperStyle">
        <item name="ms_stepperType">dots</item>
        <item name="ms_activeStepColor">@color/white</item>
        <item name="ms_inactiveStepColor">@color/white_c</item>
        <item name="ms_bottomNavigationBackground">@color/gray_6</item>
    </style>

</resources>
