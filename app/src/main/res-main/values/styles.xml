<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DotStepper"/>

    <!--______________________________Light theme(0)__________________________-->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="colorPrimary">@color/grey_50</item>
        <item name="colorPrimaryDark">@color/white_c</item>
        <item name="colorAccent">@color/grey_700</item>
        <item name="android:colorBackground">@color/grey_50</item>
        <item name="android:textColor">@color/text_color_white_black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/grey_50</item>
        <item name="android:textColorSecondary">@color/grey_800</item>
        <item name="android:textColorSecondaryInverse">@color/white_c</item>
        <item name="android:editTextStyle">@style/InputField.Light</item>
        <item name="ico_color">@color/black</item>
        <item name="ms_stepperStyle">@style/DotStepper.Light</item>
        <!-- drawables -->
        <item name="themedBackDrawable">@drawable/ic_arrow_back_black</item>
        <item name="themedMyLocationDrawable">@drawable/ic_my_location_white</item>
        <item name="themedFavoriteDrawable">@drawable/ic_favorite_black</item>
        <item name="themedFavoriteBorderDrawable">@drawable/ic_favorite_border_black</item>
        <item name="themedAddDrawable">@drawable/ic_add_white</item>
        <item name="themedSettingsDrawable">@drawable/ic_settings_black</item>
        <item name="themedCheckDrawable">@drawable/ic_check_white</item>
    </style>

    <style name="InputField.Light" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/white_c</item>
    </style>

    <style name="DotStepper.Light">
        <item name="ms_stepperType">dots</item>
        <item name="ms_activeStepColor">@color/black</item>
        <item name="ms_inactiveStepColor">@color/grey_800</item>
        <item name="ms_bottomNavigationBackground">@color/grey_50</item>
    </style>

    <!--_________________________________________________________________________________-->



