<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:layout_editor_absoluteY="25dp"
                                             tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/main_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/city"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <MultiAutoCompleteTextView
        android:id="@+id/multiAutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MultiAutoCompleteTextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/main_city_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/main_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:textSize="67sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/main_temp_tv"
        app:layout_constraintTop_toBottomOf="@+id/multiAutoCompleteTextView"
        app:layout_constraintHorizontal_bias="0.4"/>

    <TextView
        android:id="@+id/main_temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:textSize="63sp"
        app:layout_constraintLeft_toRightOf="@+id/main_icon_iv"
        app:layout_constraintRight_toLeftOf="@+id/main_separator"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_icon_iv"
        android:layout_marginBottom="0dp"/>

    <View
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/gray_9"
        app:layout_constraintBottom_toBottomOf="@+id/main_temp_tv"
        app:layout_constraintLeft_toRightOf="@+id/main_temp_tv"
        app:layout_constraintTop_toTopOf="@+id/main_temp_tv"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/main_separator"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/main_max_temp_tv"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"
        android:text="t"
        app:layout_constraintLeft_toRightOf="@+id/main_separator"
        app:layout_constraintTop_toTopOf="@+id/main_separator"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/main_max_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="@string/max"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/main_max_temp_tv"
        app:layout_constraintRight_toRightOf="@+id/main_max_temp_tv"
        app:layout_constraintTop_toBottomOf="@+id/main_max_temp_tv"/>

    <TextView
        android:id="@+id/main_min_temp_tv"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="t"
        app:layout_constraintBottom_toTopOf="@+id/main_min_hint_tv"
        app:layout_constraintLeft_toLeftOf="@+id/main_min_hint_tv"
        app:layout_constraintRight_toRightOf="@+id/main_min_hint_tv"/>

    <TextView
        android:id="@+id/main_min_hint_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/min"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_separator"
        app:layout_constraintLeft_toRightOf="@+id/main_separator"/>

    <TextView
        android:id="@+id/main_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_icon_iv"/>

</android.support.constraint.ConstraintLayout>