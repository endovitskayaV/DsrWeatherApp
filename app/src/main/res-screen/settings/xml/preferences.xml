<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/units"
        android:entryValues="@array/unitsValues"
        android:key="units"
        android:title="@string/units"/>
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/themes"
        android:entryValues="@array/themesValues"
        android:key="theme"
        android:title="@string/theme"/>
    <SwitchPreference
        android:defaultValue="false"
        android:key="prefer_dark"
        android:title="@string/prefer_dark_theme"/>
    <Preference
        android:title="@string/notifications">
        <intent android:action="android.intent.action.VIEW"
            android:targetPackage="soutvoid.com.dsrweatherapp"
            android:targetClass="soutvoid.com.DsrWeatherApp.ui.screen.triggers.TriggersActivityView"/>
    </Preference>
</PreferenceScreen>